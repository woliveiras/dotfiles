#!/bin/bash

RED='\033[0;31m'
BLUE='\033[1;34m'
NC='\033[0m' # No Color

## Apps used on System

## Update System

printf "${RED}Updating System${NC}\n------- \n"

sudo add-apt-repository ppa:indicator-multiload/stable-daily -y
sudo add-apt-repository ppa:synapse-core/ppa -y
sudo add-apt-repository ppa:tualatrix/ppa -y
sudo add-apt-repository ppa:shnatsel/zram -y
sudo add-apt-repository ppa:linrunner/tlp -y
sudo add-apt-repository ppa:tsbarnes/indicator-keylock -y

sudo apt-get update
sudo apt-get upgrade -y

## Essential packages

printf "${RED}Install essentials${NC}\n------- \n"

sudo apt-get install -y build-essential libssl-dev libcurl4-gnutls-dev libexpat1-dev gettext p7zip p7zip-full p7zip-rar lzma lzma-dev ubuntu-restricted-extras

## Git + Git-Cola + Node + NVM + VIM + Meld

printf "${RED}Dev essentials${NC}\n------- \n"

sudo apt-get install -y git git-cola nodejs vim meld

curl -o- https://raw.githubusercontent.com/creationix/nvm/v0.31.0/install.sh | bash

printf "${RED}Configure NVM${NC}\n------- \n"

mkdir ~/.nvm

nvm install stable

nvm install 0.12

printf "${RED}Copy configs to /home${NC}\n------- \n"

cp -v .bashrc .gitconfig .nvmrc .vimrc $HOME

## Others

printf "${RED}Install others${NC}\n------- \n"

sudo apt-get install -y gimp inkscape vlc browser-plugin-vlc -y

## Optimize Ubuntu

printf "${RED}Optimize Ubuntu${NC}\n------- \n"

sudo apt-get install indicator-multiload synapse ubuntu-tweak compizconfig-settings-manager preload zramswap-enabler indicator-keylock -y

## Optimize battery management

sudo apt-get remove laptop-mode-tools

sudo apt-get install tlp tlp-rdw

sudo tlp start

## Remember

printf "\n ---- \n\n${NC}Remember to install later: \n${BLUE}- SublimeText\n- Chrome\n- Slack\n- Java (uurgh)\n- Meld${NC}\n\n ---- \n"
